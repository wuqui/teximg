\newcommand{\ol}[2][]{\emph{#2}\textsuperscript{#1}}
\newcommand{\mrphm}[1]{\{{#1}\}}
\newcommand{\sps}[1]{\textsuperscript{#1}}
\newcommand{\sbs}[1]{\textsubscript{#1}}
