\usepackage[linguistics]{forest}

\forestset{
  sealing/.append style =
    {
    grow'=east,
    anchor=west,
    calign=first,
    child anchor=west,
    parent anchor=east,
    font=\sffamily,
    where n children=0{edge=dotted, tier=branch, font={\rmfamily \itshape}, anchor=east}{},
    edge path={\noexpand\path[\forestoption{edge}](!u.parent anchor) -- +(5pt,0) |- (.child anchor)\forestoption{edge label};},
  },
  morpho/.style = {
    l sep+=2em,
  },
  mproc/.style n args=1{%
    edge label/.expanded={%
      node [midway, right, xshift=1em] {#1}%
    },
  }
}
